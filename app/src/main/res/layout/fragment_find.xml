<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/fragment_find"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FindFragment">


    <ImageView
        android:id="@+id/find_back_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back_btn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/find_close_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/close_btn"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/find_back_btn"
        />

    <ImageView
        android:id="@+id/find_id_tab_on"
        android:layout_width="180dp"
        android:layout_height="42dp"
        android:src="@drawable/find_id_tab_on"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_back_btn"
        />

    <ImageView
        android:id="@+id/find_num_tab_off"
        android:layout_width="180dp"
        android:layout_height="42dp"
        android:src="@drawable/find_num_tab_off"
        app:layout_constraintStart_toEndOf="@id/find_id_tab_on"
        app:layout_constraintTop_toTopOf="@id/find_id_tab_on"
        />

    <FrameLayout
        android:id="@+id/find_id_page"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_id_tab_on">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 정보 확인을 위해\n본인 인증이 필요해요."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            />

        <EditText
            android:id="@+id/find_name_et"
            android:layout_width="328dp"
            android:layout_height="44dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="#E5E5E5"
            android:hint="이름"
            android:textColorHint="#757575"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/find_birth_et"
            android:layout_width="148dp"
            android:layout_height="44dp"
            android:layout_marginTop="228dp"
            android:layout_marginStart="16dp"
            android:textColorHint="#757575"
            android:hint="생년월일 6자리"
            android:textSize="16sp"
            android:backgroundTint="#E5E5E5"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="6"
            />

        <ImageView
            android:id="@+id/find_bar"
            android:layout_width="7dp"
            android:layout_height="2dp"
            android:layout_marginStart="175dp"
            android:layout_marginTop="249dp"
            android:src="@drawable/self_bar"
            />

        <EditText
            android:id="@+id/find_sex_et"
            android:layout_width="148dp"
            android:layout_height="44dp"
            android:layout_marginStart="196dp"
            android:layout_marginTop="228dp"
            android:textColorHint="#757575"
            android:hint="3******"
            android:letterSpacing="0.8"
            android:textSize="16sp"
            android:backgroundTint="#E5E5E5"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="1"
            />

        <EditText
            android:id="@+id/find_tell_et"
            android:layout_width="328dp"
            android:layout_height="44dp"
            android:layout_marginTop="316dp"
            android:textColorHint="#757575"
            android:layout_marginStart="16dp"
            android:hint="전화번호 11자리"
            android:textSize="16sp"
            android:backgroundTint="#E5E5E5"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="11"
            />

        <ImageView
            android:id="@+id/find_text_num"
            android:layout_width="141dp"
            android:layout_height="16dp"
            android:src="@drawable/num_message"
            android:visibility="invisible"
            android:layout_marginStart="16dp"
            android:layout_marginTop="360dp"
            />

        <ImageView
            android:id="@+id/find_certify_btn"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:src="@drawable/self_btn"
            android:layout_marginStart="256dp"
            android:layout_marginTop="316dp"
            />

        <EditText
            android:id="@+id/find_num_et"
            android:layout_width="328dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="404dp"
            android:backgroundTint="#E5E5E5"
            android:hint="인증번호"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="#757575"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/find_check"
            android:layout_width="166dp"
            android:layout_height="16dp"
            android:src="@drawable/self_check"
            android:visibility="invisible"
            android:layout_marginStart="16dp"
            android:layout_marginTop="448dp"
            />

        <ImageView
            android:id="@+id/find_num_yet"
            android:layout_width="156dp"
            android:layout_height="16dp"
            android:visibility="invisible"
            android:src="@drawable/yet_num_text"
            android:layout_marginStart="16dp"
            android:layout_marginTop="448dp"
            />

        <ImageView
            android:id="@+id/find_check_not"
            android:layout_width="155dp"
            android:layout_height="16dp"
            android:visibility="invisible"
            android:src="@drawable/num_check_not"
            android:layout_marginStart="16dp"
            android:layout_marginTop="448dp"
            />

        <ImageView
            android:id="@+id/find_num_check_btn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/certify_num_check_btn"
            android:layout_marginStart="284dp"
            android:layout_marginTop="404dp"
            />

        <TextView
            android:id="@+id/find_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="3:00"
            android:layout_marginTop="514dp"
            android:layout_marginStart="159dp"
            android:textColor="#1C734D"
            />

        <Button
            android:id="@+id/find_next_btn"
            android:layout_width="328dp"
            android:layout_height="56dp"
            android:background="@drawable/uncheck_btnstyle"
            android:text="아이디 찾기"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#AAAAAA"
            android:textSize="18sp"
            android:layout_marginTop="554dp"
            android:layout_marginStart="16dp"
            />

    </FrameLayout>

        <FrameLayout
            android:id="@+id/find_num_page"
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:background="@color/white"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/find_id_tab_on"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:text="이메일 인증 후,\n새 비밀번호를 등록해주세요."
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/find_email_et"
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="140dp"
                android:backgroundTint="#E5E5E5"
                android:hint="아이디(이메일)"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="#757575"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/find_email_certify_btn"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:layout_marginStart="256dp"
                android:layout_marginTop="140dp"
                android:src="@drawable/certify_btn" />

            <ImageView
                android:id="@+id/end_text"
                android:layout_width="169dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="184dp"
                android:src="@drawable/end_text"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/find_certify_num_et"
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="228dp"
                android:backgroundTint="#E5E5E5"
                android:hint="인증번호"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="#757575"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/find_certify_num_btn"
                android:layout_width="88dp"
                android:layout_height="40dp"
                android:layout_marginStart="284dp"
                android:layout_marginTop="228dp"
                android:src="@drawable/certify_num_btn" />

            <ImageView
                android:id="@+id/find_num_text"
                android:layout_width="166dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="272dp"
                android:src="@drawable/certify_num_tv"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/find_num_not_equal_text"
                android:layout_width="155dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="272dp"
                android:src="@drawable/join_not_equal"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/find_secret_et"
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="316dp"
                android:backgroundTint="#E5E5E5"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColorHint="#757575"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/no_eng"
                android:layout_width="67dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="360dp"
                android:src="@drawable/no_eng" />

            <ImageView
                android:id="@+id/no_num"
                android:layout_width="45dp"
                android:layout_height="16dp"
                android:layout_marginStart="91dp"
                android:layout_marginTop="360dp"
                android:src="@drawable/no_num" />

            <ImageView
                android:id="@+id/no_special"
                android:layout_width="67dp"
                android:layout_height="16dp"
                android:layout_marginStart="144dp"
                android:layout_marginTop="360dp"
                android:src="@drawable/no_special" />

            <ImageView
                android:id="@+id/no_range"
                android:layout_width="83dp"
                android:layout_height="16dp"
                android:layout_marginStart="219dp"
                android:layout_marginTop="360dp"
                android:src="@drawable/no_range" />

            <EditText
                android:id="@+id/find_check_et"
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="404dp"
                android:backgroundTint="#E5E5E5"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColorHint="#757575"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/no_same"
                android:layout_width="92dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="448dp"
                android:src="@drawable/no_same" />

            <TextView
                android:id="@+id/find_num_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="159dp"
                android:layout_marginTop="514dp"
                android:text="3:00"
                android:textColor="#1C734D"
                android:textSize="16sp" />

            <Button
                android:id="@+id/find_num_next_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="328dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="554dp"
                android:background="@drawable/uncheck_btnstyle"
                android:text="다음"
                android:textColor="#AAAAAA"
                android:textSize="18sp" />

        </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>