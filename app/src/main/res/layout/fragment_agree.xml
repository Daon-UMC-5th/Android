<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_agree"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AgreeFragment">

    <ImageView
        android:id="@+id/agree_back_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back_btn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <ImageView
        android:id="@+id/agree_close_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/close_btn"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/agree_back_btn"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 이용을 위해\n약관 동의가 필요해요."
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="@id/agree_back_btn"
        app:layout_constraintTop_toBottomOf="@id/agree_back_btn"
        />
    
    <CheckBox
        android:id="@+id/agree_all_check"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="97dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체동의"
        android:textColor="#1C734D"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/agree_all_check"
        app:layout_constraintTop_toTopOf="@id/agree_all_check"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(선택) 제 3자 제공 동의를 포함하여 모두 동의합니다."
        android:textSize="12sp"
        android:textColor="#757575"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="@id/text2"
        app:layout_constraintTop_toBottomOf="@id/text2"
        />

    <ImageView
        android:id="@+id/divisor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/divider"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3"
        />

    <CheckBox
        android:id="@+id/agree_check1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divisor"
        />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수)"
        android:textColor="#1C734D"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/agree_check1"
        app:layout_constraintTop_toTopOf="@id/agree_check1"
        />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 개인정보 수집 및 이용 안내"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/text4"
        app:layout_constraintTop_toTopOf="@id/text4"
        />

    <TextView
        android:id="@+id/agree_check1_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보기"
        android:textSize="12sp"
        android:textColor="#757575"
        android:layout_marginStart="63dp"
        app:layout_constraintStart_toEndOf="@id/text5"
        app:layout_constraintTop_toTopOf="@id/text5"
        />

    <CheckBox
        android:id="@+id/agree_check2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="@id/agree_check1"
        app:layout_constraintTop_toBottomOf="@id/agree_check1"
        />

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수)"
        android:textColor="#1C734D"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/agree_check2"
        app:layout_constraintTop_toTopOf="@id/agree_check2"
        />

    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 제 3자 제공 동의"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/text6"
        app:layout_constraintTop_toTopOf="@id/text6"
        />

    <TextView
        android:id="@+id/agree_check2_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보기"
        android:textSize="12sp"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="@id/agree_check1_look"
        app:layout_constraintTop_toTopOf="@id/text7"
        />

    <CheckBox
        android:id="@+id/agree_check3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="@id/agree_check2"
        app:layout_constraintTop_toBottomOf="@id/agree_check2"
        />

    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(선택)"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/agree_check3"
        app:layout_constraintTop_toTopOf="@id/agree_check3"
        />

    <TextView
        android:id="@+id/text9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 제 3자 제공 동의"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/text8"
        app:layout_constraintTop_toTopOf="@id/text8"
        />

    <TextView
        android:id="@+id/agree_check3_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보기"
        android:textSize="12sp"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="@id/agree_check1_look"
        app:layout_constraintTop_toTopOf="@id/text9"
        />
    
    <Button
        android:id="@+id/agree_next_btn"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:background="@drawable/uncheck_btnstyle"
        android:text="다음"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#AAAAAA"
        android:textSize="18sp"
        android:layout_marginTop="166dp"
        app:layout_constraintTop_toBottomOf="@id/text9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>