<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_edit"
    tools:context=".EditProfileFragment">

    <TextView
        android:id="@+id/edit_pro"
        android:layout_width="137dp"
        android:layout_height="24dp"
        android:text="프로필 편집"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingExtra="1dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/backto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="TODO" />
    
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="76dp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:layout_width="45dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="184dp"
        android:text="닉네임"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <EditText
        android:id="@+id/edit_nickname"
        android:layout_width="328dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="212dp"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />
    <TextView
        android:layout_width="56dp"
        android:layout_height="20dp"
        android:text="중복확인"
        android:textColor="#1C734D"
        android:layout_marginStart="272dp"
        android:layout_marginTop="217dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="45dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="319dp"
        android:text="소개말"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edit_intro"
        android:layout_width="328dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="347dp"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:maxLength="25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAutofill="no"
        tools:ignore="LabelFor" />

    <android.widget.Button
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:background="@drawable/btn_01"
        tools:ignore="MissingConstraints"
        android:text="저장"
        android:textColor="#AAAAAA"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="652dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>