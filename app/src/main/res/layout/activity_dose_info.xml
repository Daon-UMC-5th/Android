<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info.DoseInfoActivity">
    <FrameLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_frm">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/arrow_back" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_gravity="center|center_vertical"
            android:text="복용"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/editBtn"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:text="편집"
            android:textSize="16dp"
            android:textColor="#1C734D"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/main_frm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#EEEEEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:weightSum="3">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/breakfast"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginRight="11dp"
                android:text="아침"
                android:background="@drawable/unselect_btn"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lunch"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginRight="11dp"
                android:text="점심"
                android:background="@drawable/unselect_btn"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dinner"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="저녁"
                android:background="@drawable/unselect_btn"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/medicine"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:textColorHint="#757575"
            android:maxLength="50"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="16dp"/>
        <LinearLayout
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/noti_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="알림"
                    android:textColor="#757575"
                    android:textSize="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/noti_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="없음"
                    android:textColor="#757575"
                    android:textSize="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/edit_text">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cycle_title"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/cycle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="반복"
                    android:textColor="#757575"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="안 함"
                    android:textColor="#757575"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/deleteBtn"
        android:layout_width="191dp"
        android:layout_height="48dp"
        android:src="@drawable/record_delete"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#80000000">
        <androidx.cardview.widget.CardView
            android:id="@+id/cancel_dialog"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            android:visibility="gone"
            android:layout_marginRight="42dp"
            android:layout_marginLeft="42dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="8dp">
                <TextView
                    android:id="@+id/dialog_content"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="복용 기록을 삭제하시겠습니까?"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/dialog_no"
                    android:layout_width="74dp"
                    android:layout_height="40dp"
                    android:text="아니오"
                    android:textColor="#AAAAAA"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintTop_toBottomOf="@id/dialog_content"
                    app:layout_constraintEnd_toStartOf="@id/dialog_yes"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/dialog_yes"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:text="예"
                    android:textColor="#1C734D"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/dialog_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>