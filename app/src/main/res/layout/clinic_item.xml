<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp">
    <TextView
        android:id="@+id/clinic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삼성병원"
        android:textSize="20dp"
        android:maxLength="15"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/clinic_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mri 검사"
        android:textSize="20dp"
        android:maxLength="15"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clinic_name"/>
    <ImageView
        android:id="@+id/time_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/clinic_notification"
        app:layout_constraintBottom_toBottomOf="@id/clinic_notification"
        app:layout_constraintEnd_toStartOf="@id/clinic_notification"/>
    <TextView
        android:id="@+id/clinic_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 12:00"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/time_img"
        app:layout_constraintTop_toBottomOf="@id/clinic_content"/>
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/arrow_right"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>