<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_yes_result"
    android:layout_width="match_parent"
    android:layout_height="630dp"
    tools:context=".YesResultFragment">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본인인증 결과"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="54dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <View
        android:id="@+id/back"
        android:layout_width="328dp"
        android:layout_height="170dp"
        android:background="@drawable/border_dialog"
        android:backgroundTint="#F8FAF5"
        android:layout_marginTop="58dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        />

    <TextView
        android:id="@+id/id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="51dp"
        app:layout_constraintStart_toStartOf="@id/back"
        app:layout_constraintTop_toTopOf="@id/back"
        />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/id_text"
        app:layout_constraintTop_toTopOf="@id/id_text"
        />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입일"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/id_text"
        app:layout_constraintTop_toBottomOf="@id/id_text"
        />
    
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/date_text"
        app:layout_constraintTop_toTopOf="@id/date_text"
        />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:background="@drawable/btnstyle"
        style="?android:attr/borderlessButtonStyle"
        android:text="로그인하기"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        />






</androidx.constraintlayout.widget.ConstraintLayout>