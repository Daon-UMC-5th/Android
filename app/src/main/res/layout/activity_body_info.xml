<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info.BodyInfoActivity">
    <FrameLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_frm">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/arrow_back" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_gravity="center|center_vertical"
            android:text="신체"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/editBtn"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:text="편집"
            android:textSize="16dp"
            android:textColor="#1C734D"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/main_frm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#EEEEEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal|center_vertical">
            <TextView
                android:id="@+id/body_temperature"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:textSize="16dp"
                android:background="@drawable/edit_text"
                android:textColorHint="#757575"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:text="℃"
                android:textColor="#1C734D"
                android:gravity="center|left" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal|center_vertical">
            <TextView
                android:id="@+id/body_weight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:textSize="16dp"
                android:background="@drawable/edit_text"
                android:textColorHint="#757575"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="31dp"
                android:layout_height="match_parent"
                android:text="Kg"
                android:textColor="#1C734D"
                android:gravity="center|left" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal|center_vertical">
            <TextView
                android:id="@+id/body_blood_sugar"
                android:layout_width="0dp"
                android:textSize="16dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:background="@drawable/edit_text"
                android:textColorHint="#757575"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:text="Mg/Dl"
                android:textColor="#1C734D"
                android:gravity="center|left" />
        </LinearLayout>
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:textSize="16dp"
            android:background="@drawable/edit_text"
            android:textColorHint="#757575"
            android:padding="12dp"
            android:gravity="top"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/deleteBtn"
        android:layout_width="191dp"
        android:layout_height="48dp"
        android:src="@drawable/record_delete"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#80000000">
        <androidx.cardview.widget.CardView
            android:id="@+id/cancel_dialog"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            android:visibility="gone"
            android:layout_marginRight="42dp"
            android:layout_marginLeft="42dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="8dp">
                <TextView
                    android:id="@+id/dialog_content"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="신체 기록을 삭제하시겠습니까?"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/dialog_no"
                    android:layout_width="74dp"
                    android:layout_height="40dp"
                    android:text="아니오"
                    android:textColor="#AAAAAA"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintTop_toBottomOf="@id/dialog_content"
                    app:layout_constraintEnd_toStartOf="@id/dialog_yes"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/dialog_yes"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:text="예"
                    android:textColor="#1C734D"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/dialog_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>